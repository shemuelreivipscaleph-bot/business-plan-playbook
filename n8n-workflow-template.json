    {
      "parameters": {
        "jsCode": "const body = $json.body;\nlet promptText = body.promptTemplate || '';\n\n// Inject user inputs into the prompt\nif (body.inputs) {\n  for (const [key, value] of Object.entries(body.inputs)) {\n    promptText = promptText.replace(new RegExp(`{${key}}`, 'g'), value);\n  }\n}\n\nreturn {\n  promptText,\n  originalBody: body\n};"
      },
      "id": "70544ae0-fd07-46ec-aee8-8775c32ae119",
      "name": "Prompt Router1",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [470, 300]
    },
    {
      "parameters": {
        "resource": "chat",
        "operation": "create",
        "messages": {
          "values": [
            {
              "role": "user",
              "content": "={{ $json.promptText }}"
            }
          ]
        },
        "options": {}
      },
      "id": "01731267-0a56-4055-8050-0a57723b3a7b",
      "name": "OpenAI1",
